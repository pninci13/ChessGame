<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="popUpStage" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.visual.chess.controllers.DrawPopUpController">
    <children>
        <Label graphicTextGap="5.0" layoutX="58.0" layoutY="68.0" text="Are you sure you want to surrender? ">
            <font>
                <Font name="Roboto Light" size="18.0"/>
            </font>
        </Label>
        <Button fx:id="yesButton" layoutX="77.0" layoutY="167.0" mnemonicParsing="false" onAction="#onYesButtonClick"
                prefHeight="50.0" prefWidth="100.0" text="Yes"/>
        <Button fx:id="noButton" layoutX="223.0" layoutY="167.0" mnemonicParsing="false" onAction="#onNoButtonClick"
                prefHeight="50.0" prefWidth="100.0" text="No"/>
    </children>

    <stylesheets>
        <URL value="@../styles/pop-up.css"/>
    </stylesheets>
</Pane>
